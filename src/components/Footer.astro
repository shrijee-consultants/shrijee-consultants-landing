<style>
  footer {
    padding: 2em 1em 6em 1em;
    background: linear-gradient(var(--gray-gradient)) no-repeat;
    color: rgb(var(--gray));
    text-align: center;
  }

  footer p {
    margin: 0.25em 0;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1em;
    margin-top: 1em;
  }

  .social-links a img {
    display: block;
    width: 32px;
    height: 32px;
    filter: grayscale(100%);
    transition: transform 0.2s ease, filter 0.2s ease;
  }

  .social-links a:hover img {
    transform: scale(1.1);
    filter: none;
  }
</style>
